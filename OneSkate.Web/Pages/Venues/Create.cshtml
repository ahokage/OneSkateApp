@page
@model OneSkate.Web.Pages.Venues.CreateModel
@{
}
<html>
<head>
    <style>
        .form-group{
            margin-bottom: 10px
        }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <h3>Create venue</h3>
                <div class="form-group">
                    @Html.LabelFor(m => m.Venue.Name)
                    @Html.TextBoxFor(m => m.Venue.Name, new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Venue.Name)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Venue.Notes)
                    @Html.TextBoxFor(m => m.Venue.Notes,new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Venue.Notes)
                </div>
                <button class="btn btn-primary" type="submit">Add Venue</button>
            </form>
        </div>
    </div>

</body>
</html>
